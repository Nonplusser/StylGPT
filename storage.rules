
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files for simplicity, but restrict writes.
    match /{allPaths=**} {
      allow read;
    }

    // Users can only write to their own wardrobe-items directory.
    match /wardrobe-items/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // The admin-powered server action will handle writes to processed-items,
    // so client-side write rules are not needed for that path.
    // Public read is already granted by the wildcard rule above.
  }
}
